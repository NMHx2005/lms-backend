{
  "name": "lms-backend",
  "version": "1.0.0",
  "main": "server.ts",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon -r tsconfig-paths/register server.ts",
    "build": "tsc",
    "build:prod": "npm run build && npm run clean:dist",
    "clean:dist": "rimraf dist",
    "start:prod": "NODE_ENV=production node dist/server.js",
    "test": "jest",
    "seed": "ts-node -r tsconfig-paths/register src/scripts/seedDatabase.ts",
    "seed:dev": "ts-node -r dotenv/config -r tsconfig-paths/register src/scripts/seedDatabase.ts",
    "db:reset": "npm run seed",
    "db:status": "ts-node -r tsconfig-paths/register -e \"import { testConnection, getDBStats } from './src/config/database'; testConnection().then(console.log); getDBStats().then(console.log);\"",
    "test:cors": "ts-node -r tsconfig-paths/register src/scripts/testCors.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit",
    "postinstall": "npm run build"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.41.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.0.1",
    "express-slow-down": "^3.0.0",
    "express-validator": "^7.2.1",
    "helmet": "^6.0.1",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "multer-storage-cloudinary": "^4.0.0",
    "node-cron": "^4.2.1",
    "nodemailer": "^6.9.1",
    "pdfkit": "^0.17.1",
    "socket.io": "^4.6.1",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/express-rate-limit": "^5.1.3",
    "@types/express-validator": "^2.20.33",
    "@types/hpp": "^0.2.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^1.4.13",
    "@types/node": "^18.15.0",
    "@types/pdfkit": "^0.17.2",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "nodemon": "^2.0.21",
    "prettier": "^2.8.7",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^4.9.5"
  }
}
